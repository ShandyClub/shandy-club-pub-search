  },
  "dependencies": {
    "micro": "^7.2.1",
    "mongodb": "^2.2.25"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "fs-promise": "^2.0.1",
    "nodemon": "^1.11.0",
    "request-promise": "^4.2.0",
    "test-listen": "^1.0.1"
  }
}
