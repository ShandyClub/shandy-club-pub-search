{
  "name": "shandy-club-pub-search",
  "version": "1.0.0",
  "description": "Microservice to search Shandy Club pubs",
  "main": "index.js",
  "engines": {
    "node": "~7.6.0"
  },
  "repository": "https://github.com/ShandyClub/shandy-club-pub-search.git",
  "author": "Luke Hedger <cheers@shandy.club>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "ava",
    "start": "MONGO_URL=mongodb://127.0.0.1/shandyclub nodemon --exec micro -p 8000",
